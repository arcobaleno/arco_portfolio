<center>
<h1 class="request_list">All Requests</h1>

<table class="table">
  <tr>
  	<th class="request">Message</th>
    <th class="request">Name</th>
    <th class="request">Email</th>
    <th class="request">Website</th>
  </tr>

<% @requests.each do |request| %>
  <tr>
    <td class="request message"><%= request.message %></td>
    <td class="request"><%= request.name %></td>
    <td class="request"><%= request.email %></td>
    <td class="request"><%= request.website %></td>
  </tr>
<% end %>
</table>
</center>